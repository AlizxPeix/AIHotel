<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_detail_recomment_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/detail_recomment_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/item_detail_rect"
            android:drawablePadding="10dp"
            android:text="@string/detail_recommend_actical"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@color/grey_600"
            android:text="广告"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/detail_recomment_item_image"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/detail_recommend_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="第三方v都是vs的vs的vs的发士大规定法规规范的夫士大夫"
                android:textColor="@color/black_alpha_176"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/detail_recommend_item_title">

                <TextView
                    android:id="@+id/detail_recommend_item_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="200元券"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/detail_recommend_item_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="bottom|right"
                    android:text="天猫 | 9-23"
                    android:textColor="@color/diy_gray2"
                    android:textSize="10sp" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/detail_related_item_line"
        android:layout_width="match_parent"
        android:layout_height=".1dp"
        android:layout_marginLeft="18sp"
        android:layout_marginRight="18sp"
        android:layout_marginTop="10dp"
        android:background="@color/diy_gray" />

</LinearLayout>