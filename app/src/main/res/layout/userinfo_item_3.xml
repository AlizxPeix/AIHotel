<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/me_icon_xiaoxi"/>
<!--            android:tint="@color/grey_800"-->
<!--            android:src="@drawable/me_icon_about"-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="我的消息"
                android:textColor="@color/grey_800" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".2dp"
            android:layout_marginLeft="60dp"
            android:background="@color/diy_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/me_icon_huaban"/>
<!--            android:tint="@color/grey_800"-->
<!--            android:src="@drawable/me_icon_gold_my_contribute"-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="我的投稿"
                android:textColor="@color/grey_800" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".2dp"
            android:layout_marginLeft="60dp"
            android:background="@color/diy_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/me_icon_qianbao"/>
<!--            android:tint="@color/grey_800"-->
<!--            android:src="@drawable/me_icon_wallet"-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="我的钱包"
                android:textColor="@color/grey_800" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>