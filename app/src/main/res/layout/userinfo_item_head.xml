<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:text="登录/注册"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/iv_login_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:tint="@color/grey_800"
            android:background="@drawable/login_shape_corner_bg"
            android:src="@drawable/me_login_weixin" />

        <ImageView
            android:id="@+id/iv_login_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:tint="@color/grey_800"
            android:background="@drawable/login_shape_corner_bg"
            android:src="@drawable/me_login_qq" />

        <ImageView
            android:id="@+id/iv_login_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:tint="@color/grey_800"
            android:background="@drawable/login_shape_corner_bg"
            android:src="@drawable/me_login_weibo" />

        <ImageView
            android:id="@+id/iv_login_taobao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:tint="@color/grey_800"
            android:background="@drawable/login_shape_corner_bg"
            android:src="@drawable/me_login_taobao" />
    </LinearLayout>


</LinearLayout>