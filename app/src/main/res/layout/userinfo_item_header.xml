<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_login_taobao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="38dp"
        android:paddingTop="38dp"
        android:background="@drawable/login_shape_corner_bg"
        android:src="@drawable/me_personal_infermation" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尊敬的普通用户"
            android:textSize="24sp"
            android:textColor="@color/black_alpha_192"
            android:paddingTop="78dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间号：1241"
            android:textSize="18sp"
            android:textColor="@color/black_alpha_160"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>